{% extends 'base.html.twig' %}

{% block title %}Wishlist{% endblock %}

{% block body %}
    <h1>Wishlist</h1>

    <table class="table">
        <tbody>
        {% if is_granted("ROLE_ADMIN") %}
            <tr>
                <th>Id</th>
                <td>{{ wishlist.id }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Nom</th>
                <td>{{ wishlist.listTitle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ wishlist.listDescription }}</td>
            </tr>
            <tr>
                <th>Cr√©e le</th>
                <td>{{ wishlist.createdAt ? wishlist.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Derniere modification</th>
                <td>{{ wishlist.lastEditAt ? wishlist.lastEditAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cr√©ateur</th>
                <td>{{ wishlist.getWishlistOwner().getUsername() }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-center p-3">
    <a href="{{ path('app_wishlist_item_new', {'wishlistId': wishlist.id}) }}" class="btn btn-success mx-2">Ajouter un √©l√©ment !</a>
    </div>

<div class="d-flex justify-content-start">
  <a href="{{ path('app_wishlist_edit', {'id': wishlist.id}) }}" class="btn btn-success mx-2">Modifier</a>
  <a href="{{ path('app_wishlist_index') }}" class="btn btn-primary mx-2">Retourner √† mes Wishlists !</a>
  {{ include('wishlist/_delete_form.html.twig') }}
</div>


<div class="container">
    <div class="row">
        {% for wishlist in wishlists %}
            <div class="col-md-4 mb-3">
                <div class="card">
                    {% if is_granted("ROLE_ADMIN") %}
                        <div class="card-header">
                            ID: {{ wishlist.id }}
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ wishlist.listTitle }}</h5>
                        <p class="card-text listCard-text">{{ wishlist.listDescription }}</p>
                        <p class="card-text">
                            <small class="text-muted">Cr√©√© le: {{ wishlist.createdAt ? wishlist.createdAt|date('Y-m-d') : '' }}</small>
                            <small class="text-muted"> | Cr√©ateur : {{ wishlist.getWishlistOwner().getUsername() }}</small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_wishlist_show', {'id': wishlist.id}) }}" class="card-link">Voir</a>
                        <a href="{{ path('app_wishlist_edit', {'id': wishlist.id}) }}" class="card-link">Modifier</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center">Pas de liste disponible ü•∫</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
